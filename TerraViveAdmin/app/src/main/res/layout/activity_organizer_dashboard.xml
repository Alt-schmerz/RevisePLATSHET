<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organizerDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OrganizerDashboard">

    <TextView
        android:id="@+id/tvWelcomeOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Organizer!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Activity" />

    <Button
        android:id="@+id/btnViewMyActivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Activities"
        android:layout_marginTop="12dp" />

</LinearLayout>
